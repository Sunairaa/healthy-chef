<div id="login" class="container">
    <div class="row">
        <div class=" mt-3 d-flex flex-column align-items-center justify-content-center col-12 col-md-6">
            <h1 class="text-center">Login</h1>
            <form action="/auth/login" method="POST" class="row g-3">
                <div class="col-md-12">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" class="form-control" id="inputEmail">
                </div>
                <div class="col-md-12">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" class="form-control" id="inputPassword">
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-success mt-1">Sign in</button>
                </div>
            </form>

            {{#if errorMessage}}
            <p>{{errorMessage}}</p>
            {{/if}}

            <p class="mt-2">Not a member? <a href="/auth/signup">Signup</a></p>
        </div>

        <div  class=" mt-3 mb-3 col-12 col-md-6">
            <img class="img-fluid " alt="cakes image" src="/images/login-img.jpg">
        </div>
        
    </div>
</div>