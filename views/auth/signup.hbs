<div  id="signin" class="container">
    <div class="row">
         <div class="mt-3 d-flex flex-column align-items-center justify-content-center col-12 col-md-6">
            <h1 class="text-center">Sign Up</h1>
            <form action="/auth/signup" method="POST" class="row g-3">
                <div class="col-md-12">
                    <label for="fullName" class="form-label">Full Name</label>
                    <input type="text" name="fullName" class="form-control" id="inputUsername" required>
                </div>
                <div class="col-md-12">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" class="form-control" id="inputEmail" required>
                </div>
                <div class="col-md-12">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" name="password" class="form-control" id="inputPassword" required>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-success">Sign in</button>
                </div>
            </form>

            {{#if errorMessage}}
            <p>{{errorMessage}}</p>
            {{/if}}

            <p class="mt-2">Already registered? <a href="/auth/login">Login</a></p>
        </div>

        <div class="mt-3 mb-3 col-12 col-md-6">
<img class="img-fluid" alt="lunch image" src="/images/signup-img.jpg">
        </div>

    </div>
</div>