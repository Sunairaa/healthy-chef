<div class="container">


    <h2 class="text-center my-5">My Recipes</h2>

    {{#each myRecipesArr }}
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <div class="col">
            <div class="card shadow-sm">
                <img src="{{this.imageUrl}}" alt="">
                <div class="card-body">
                    <h3>{{this.title}}</h3>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a href="/recipe/details/{{this._id}}" class="btn btn-sm btn-outline-secondary">View</a>
                            <a href="/recipe/update/{{this._id}}" class="btn btn-sm btn-outline-secondary">Edit</a>
                            <form method="POST" action="/recipe/delete/{{this._id}}"><button
                                    class="btn btn-sm btn-outline-secondary" type="submit">Delete</button></form>
                        </div>
                        <small class="text-muted">9 mins</small>
                    </div>
                </div>
            </div>
        </div>



    </div>

    {{/each}}
</div>